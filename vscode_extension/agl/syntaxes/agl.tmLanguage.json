{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "agl",
	"patterns": [
		{"include": "#comments"},
		{"include": "#keywords"},
		{"include": "#strings"},
		{"include": "#types" },
		{"include": "#functions"}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.agl",
					"match": "//.*$"
				},
				{
					"name": "comment.block.agl",
					"begin": "/\\*",
					"end": "\\*/",
					"patterns": [
						{
							"name": "comment.block.agl",
							"match": "."
						}
					]
				}
			]
		},
		"types": {
			"patterns": [{
				"name": "storage.type.agl",
				"match": "\\b(u8|u16|u32|u64|i8|i16|i32|i64|int|uint|f32|f64|bool|string)\\b"
			}]
		},
		"functions": {
			"patterns": [{
				"name": "entity.name.function.agl",
				"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*(?=\\()"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.agl",
				"match": "\\b(if|else|import|for|return|package|func|case|switch|match|default)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.agl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.agl",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.agl"
}